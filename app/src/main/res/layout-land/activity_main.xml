<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/tittle"
        android:layout_width="357dp"
        android:layout_height="186dp"
        android:background="@drawable/maintittlebackground"
        android:gravity="center_vertical|center_horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/tittle"
        android:textColor="#CDB58F"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="452dp"
        android:layout_height="125dp"
        android:layout_marginStart="3dp"
        android:width="150dp"
        android:height="200dp"
        android:fontFamily="@font/original_surfer_regular"
        android:gravity="start"
        android:text="@string/out_message"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.758" />

    <ImageButton
        android:id="@+id/btnLangChange"
        android:layout_width="140dp"
        android:layout_height="101dp"
        android:background="@mipmap/icon_language"
        android:contentDescription="@string/changeLang"
        android:gravity="center"
        android:text="@string/changeLang"
        app:layout_constraintBottom_toTopOf="@+id/btnLaunch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnLaunch"
        android:layout_width="133dp"
        android:layout_height="111dp"
        android:layout_marginEnd="68dp"
        android:background="@mipmap/icon_start"
        android:contentDescription="@string/launchMP"
        android:gravity="center"
        android:text="@string/launchMP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/result"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.785" />


</androidx.constraintlayout.widget.ConstraintLayout>